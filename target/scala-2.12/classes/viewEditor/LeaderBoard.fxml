<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="boardPage" prefHeight="400.0" prefWidth="600.0" stylesheets="@background.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Game.Starter.LeaderBoardController">
    <children>
        <Label fx:id="boardHeader" layoutX="200.0" layoutY="14.0" styleClass="headerLabel" text="LeaderBoard">
            <font>
                <Font size="36.0" />
            </font>
        </Label>
        <TableView fx:id="RankView" layoutX="50.0" layoutY="70.0" prefHeight="260.0" prefWidth="500.0" styleClass="table-view">
            <columns>
                <TableColumn fx:id="tableNo" prefWidth="75.0" styleClass="table-column" text="No." />
                <TableColumn fx:id="tableName" prefWidth="318.0" styleClass="table-column" text="Player's Name" />
                <TableColumn fx:id="tableScore" prefWidth="105.0" styleClass="table-column" text="Score" />
            </columns>
        </TableView>
        <Button fx:id="btnConfirm" defaultButton="true" layoutX="500.0" layoutY="350.0" mnemonicParsing="false" onAction="#backToMenu" styleClass="button" text="Confirm" />
    </children>
</AnchorPane>
